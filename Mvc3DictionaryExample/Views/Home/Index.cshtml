@{
    View.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Current scores</h2>
<table>
    <tbody>
        @foreach (var kvp in Model)
        {
            <tr>
                <td>@kvp.Key
                </td>
                <td>@kvp.Value
                </td>
            </tr>
        }
    </tbody>
</table>
<h2>
    Enter new scores</h2>
<form action="" method="post">
<table id="edittable">
    <tbody>
        @foreach (var kvp in Model)
        {
            <tr>
                <td>@kvp.Key
                </td>
                <td>
                    <input name="scores[@kvp.Key]" value="@kvp.Value" />
                </td>
            </tr>
        }
    </tbody>
</table>
<input type="submit" />
</form>
